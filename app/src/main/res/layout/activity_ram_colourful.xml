<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRAM"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ram_transition"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.rob__.performancer.RAM" >

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/lblUsageRAM"
        android:text="@string/usageRAM"
        style="@style/caption"
        android:textColor="#ffffff"/>
    
    <de.passsy.holocircularprogressbar.HoloCircularProgressBar
    	android:id="@+id/cpbRAM"
    	style="@style/CircularProgressBar"
    	app:progress_color="@color/blue"/>

    <Button
        android:id="@+id/btnDetailsRAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/details_e"
	    android:textColor="#ffffff"
	    android:background="@color/blue"/>

    <ListView
        android:id="@+id/lvRAM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnDetailsRAM" />
    
</RelativeLayout>
